{
    "name": "epitech-coding-style-checker",
    "displayName": "epitech-coding-style-checker",
    "publisher": "lucasmarandat",
    "icon": "assets/icon.png",
    "description": "check your epitech coding style while you're coding",
    "version": "0.0.1",
    "--baseContentUrl": "images",
    "repository": {
        "type": "git",
        "url": "https://github.com/lucasmrdt/epitech-coding-style-checker"
    },
    "engines": {
        "vscode": "^1.29.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:c",
        "onLanguage:cpp",
        "workspaceContains:**/*.c"
    ],
    "main": "./out/extension",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "checker:update": "git clone https://github.com/ronanboiteau/NormEZ.git && mv NormEZ/NormEZ.rb linter.rb && rm -rf NormEZ",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.21"
    }
}
